{% extends 'base.html.twig' %}

{% block title %}Claim index{% endblock %}

{% block body %}
    <h1>Claim index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for claim in claims %}
            <tr>
                <td>{{ claim.id }}</td>
                <td>{{ claim.description }}</td>
                <td>
                    <a href="{{ path('app_claim_show', {'id': claim.id}) }}">show</a>
                    <a href="{{ path('app_claim_edit', {'id': claim.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_claim_new') }}">Create new</a>
{% endblock %}
